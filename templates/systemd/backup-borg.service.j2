[Unit]
Description=BorgBackup
{% for service in backup_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in backup_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=oneshot
Environment="HOME={{ sysd_docker_unit_home_path }}"
ExecStartPre=-{{ sysd_docker_host_sh }} -c '{{ sysd_docker_host_command }} stop -t {{ sysd_docker_stop_grace }} {{ backup_id }} 2>/dev/null || true'
ExecStartPre=-{{ sysd_docker_host_sh }} -c '{{ sysd_docker_host_command }} rm {{ backup_id }} 2>/dev/null || true'
ExecStartPre=-{{ sysd_docker_host_command }} run --rm --name {{ backup_id }} \
      --log-driver=none \
      --cap-drop=ALL \
      --read-only \
      --user={{ backup_uid }}:{{ backup_gid }} \
      --network={{ backup_container_net }} \
      --mount type=bind,src={{ backup_conf_path }}/passwd,dst=/etc/passwd,ro \
      --mount type=bind,src={{ backup_conf_path }},dst=/etc/borgmatic.d,ro \
      {% for source in backup_location_source_directories %}
      --mount type=bind,src={{ source }},dst={{ source }},ro \
      {% endfor %}
      --tmpfs=/tmp:rw,noexec,nosuid,size={{ backup_container_tmpfs_tmp_size }} \
      {% for arg in backup_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ backup_docker_image }} \
      sh -c "borgmatic rcreate --encryption {{ backup_encryption }}"

# The `CAP_DAC_OVERRIDE` capability is required, so that `root` in the container
# can read the `/etc/borgmatic.d/config.yaml` (`{{ backup_conf_path }}/config.yaml`) file,
# owned by `backup_username:backup_username` on the filesystem.
#
# `/root` is mountes as temporary filesystem, because we're using `--read-only` and because
# borgmatic tries to write to at least a few paths under `/root` (`.config`, `.ssh`, `.borgmatic`).
ExecStart={{ sysd_docker_host_command }} run --rm --name {{ backup_id }} \
      --log-driver=none \
      --cap-drop=ALL \
      --cap-add=CAP_DAC_OVERRIDE \
      --read-only \
      --network={{ backup_container_net }} \
      --mount type=bind,src={{ backup_conf_path }}/passwd,dst=/etc/passwd,ro \
      --mount type=bind,src={{ backup_conf_path }},dst=/etc/borgmatic.d,ro \
      {% for source in backup_location_source_directories %}
      --mount type=bind,src={{ source }},dst={{ source }},ro \
      {% endfor %}
      --tmpfs=/root:rw,noexec,nosuid,size={{ backup_container_tmpfs_root_size }} \
      --tmpfs=/tmp:rw,noexec,nosuid,size={{ backup_container_tmpfs_tmp_size }} \
      {% for arg in backup_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ backup_docker_image }}

ExecStop=-{{ sysd_docker_host_sh }} -c '{{ sysd_docker_host_command }} stop -t {{ sysd_docker_stop_grace }} {{ backup_id }} 2>/dev/null || true'
ExecStop=-{{ sysd_docker_host_sh }} -c '{{ sysd_docker_host_command }} rm {{ backup_id }} 2>/dev/null || true'
SyslogIdentifier={{ backup_id }}

[Install]
WantedBy=multi-user.target
